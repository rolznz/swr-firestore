{
  "name": "swr-firestore",
  "version": "0.17.0",
  "description": "SWR React hooks for Firestore",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "react": "src/index.tsx",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "test:files:useDocument": "jest -- \"src/__tests__/useDocument.test.ts\"",
    "test:files:useCollection": "jest -- \"src/__tests__/useCollection.test.ts\"",
    "test:files:useCollectionDateFilter": "jest -- \"src/__tests__/useCollectionDateFilter.test.ts\"",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "build": " rm lib/ -rf && tsc",
    "typescript": "tsc --noEmit",
    "example": "yarn --cwd example"
  },
  "keywords": [],
  "repository": "https://github.com/nandorojo/swr-firestore",
  "author": "Fernando Rojo <frojo@sas.upenn.edu> (https://github.com/nandorojo)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nandorojo/swr-firestore/issues"
  },
  "homepage": "https://github.com/nandorojo/swr-firestore#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "devDependencies": {
    "@firebase/firestore-types": "^1.10.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^25.x",
    "@types/react": "^17.0.34",
    "dotenv": "^10.0.0",
    "firebase": "9.1.3",
    "jest": "^25.x",
    "jest-environment-jsdom": "25",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^25.x",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.3.6",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "swr": "^1.1.0-beta.9"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
